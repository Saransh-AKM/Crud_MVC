@model IEnumerable<Crud_MVC.Model.Student>

@{
    ViewBag.Title = "Index";
}

<br />
<ul class="nav nav-tabs">
    <li class="active"><a href="#Firsttab" data-toggle="tab">View All</a></li>
    <li><a href="#Secondtab" data-toggle="tab">Create</a></li>
</ul>
<div class="tab-content">
    <div class="tab-pane fade in active" id="Firsttab">
        <h1>ViewAll</h1>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sex)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="tab-pane fade in" id="Secondtab">@Html.Action("Create")</div>
</div>